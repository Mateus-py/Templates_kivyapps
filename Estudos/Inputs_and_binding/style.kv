
# Adciona as screens ao manager
ScreenManager:
    MenuScreen:
    ProfileScreen:
# Cria as screens    
<MenuScreen>:
    name:'menu'
    MDTextField:
        id: username
        hint_text:'Nome de usuario'
        helper_text:'Por favor digite seu usuario'
        icon_right:'android'
        pos_hint:{'center_x':0.5,'center_y':0.6}
        size_hint_x:None
        width:300
    MDRectangleFlatButton:
        text:'Login'
        pos_hint:{'center_x':0.5,'center_y':0.5}
        on_press:root.manager.current = 'Profile'
<ProfileScreen>
    name:'Profile'
    MDLabel:
        id: labelone
        text:'Welcome Mateus'
        halign:'center'
    MDRectangleFlatButton:
        text:'Voltar'
        pos_hint:{'center_x':0.5,'center_y':0.2}
        on_press:root.manager.current = 'menu'
        